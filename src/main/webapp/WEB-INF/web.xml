<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>TrainManagement</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
   
  <servlet>
  	<servlet-name>landing</servlet-name>
  	<servlet-class>com.reservation.first.LandingPage</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>landing</servlet-name>
  	<url-pattern>/home</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  	<servlet-name>login</servlet-name>
  	<servlet-class>com.reservation.controller.Login</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>login</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>trains</servlet-name>
  	<servlet-class>com.reservation.controller.TrainDetailscon</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>trains</servlet-name>
  	<url-pattern>/trainavailable</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>register</servlet-name>
  	<servlet-class>com.reservation.controller.Registration</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>register</servlet-name>
  	<url-pattern>/register</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>reser</servlet-name>
  	<servlet-class>com.reservation.controller.BookTicketsServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>reser</servlet-name>
  	<url-pattern>/reservation</url-pattern>
  </servlet-mapping>
</web-app>